---
import Main from "../layouts/Main.astro";
import { Icon } from "astro-icon/components";
import "../styles/global.css";
const commitHash = import.meta.env.PUBLIC_COMMIT_HASH;
---

<Main>
	<main class="flex flex-col items-center justify-center min-h-screen">
		<div
			class="flex items-center justify-end min-w-[48rem] text-xs text-white text-opacity-10 py-xxs"
		>
			<Icon name={"mdi:source-branch"} /><code>{commitHash}</code>
		</div>
		<div>
			<!-- Sec-Top -->
			<section
				class="flex justify-between min-w-[48rem] min-h-[12rem] bg-white"
			>
				<!-- Nav -->
				<nav>
					<div class="space-x-3 p-xs font-thin leading-none">
						<a
							href="#"
							class="hover:font-bold hover:text-bloody transition-all duration-600"
							>About me</a
						>
						<a
							href="#"
							class="hover:font-bold hover:text-bloody transition-all duration-600"
							>Work</a
						>
						<a
							href="#"
							class="hover:font-bold hover:text-bloody transition-all duration-600"
							>Projects</a
						>
					</div>
				</nav>

				<div class="flex flex-col justify-between">
					<div>
						<h1 class="text-[4.2rem]">Sergi Florensa</h1>
						<h2 class="text-bloody text-[1.5rem] font-bold">
							Programador <span
								class="text-[1rem] font-thin"
								style="font-family: 'Times New Roman', Times, serif;"
								>Junior</span
							>
						</h2>
					</div>

					<div class="space-x-1 pr-xs">
						<a
							href="https://github.com/Waximusglub"
							target="_blank"
							id="miLink"
							class="text-xs cursor-pointer"
							>github.com/Waximusglub
						</a>
							<img
							id="hoverImage"
							src="img/profile.png"
							alt="Imagen flotante"
							class="hidden fixed w-32 rounded-xl shadow-lg pointer-events-none transition-opacity duration-200"
							/>
						<span>·</span>
						<a
							href="https://www.linkedin.com/in/sergi-florensadev/"
							target="_blank"
							class="text-xs"
							>/in/sergi-florensadev/
						</a>
						<span>·</span>
						<a href="mailto:sflorensadev@gmail.com" class="text-xs"
							>sflorensadev@gmail.com
						</a>
					</div>
				</div>
			</section>

			<!-- Sec-Bot -->
			<section
				class="flex justify-between items-start min-w-[48rem] min-h-[12rem] mt-xxs bg-white"
			>
				<div class="flex items-center w-[30%]">
					<div class="p-xs m-xs bg-bordeaux"></div>
					<p id="reloj" class="text-xs">00 : 00 : 00</p>
				</div>
				<div class="flex items-center w-[70%] h-[12rem] bg-bordeaux">

				</div>
			</section>
		</div>
	</main>
</Main>

<script>
	function mostrarHoraLocal() {
		const ahora = new Date();
		const horas = ahora.getHours().toString().padStart(2, "0");
		const minutos = ahora.getMinutes().toString().padStart(2, "0");
		const segundos = ahora.getSeconds().toString().padStart(2, "0");

		const relojElemento = document.getElementById("reloj");
		if (relojElemento) {
			relojElemento.textContent = `${horas} : ${minutos} : ${segundos}`;
		}
	}

	setInterval(mostrarHoraLocal, 1000);

	mostrarHoraLocal();

	const link = document.getElementById('miLink');
    const hoverImage = document.getElementById('hoverImage');

    link.addEventListener('mouseenter', () => {
      hoverImage.classList.remove('hidden');
      hoverImage.classList.add('opacity-100');
    });

    link.addEventListener('mouseleave', () => {
      hoverImage.classList.add('hidden');
    });

    link.addEventListener('mousemove', (e) => {
      hoverImage.style.left = (e.clientX + 12) + 'px';
      hoverImage.style.top = (e.clientY + 12) + 'px';
    });
</script>
