---
import { Icon } from "astro-icon/components";
import "../styles/global.css";

import Main from "../layouts/Main.astro";
import Copytxt from "../components/Copytxt";

const commitHash = import.meta.env.PUBLIC_COMMIT_HASH;
---

<Main>
	<main class="flex flex-col justify-center items-center">
		<div class="w-[55%] md:w-[40%] lg:w-[25%] my-8">
			<!-- Profile -->
			<div class="grid grid-cols-2 gap-4">
				<!-- Avatar -->
				<div class="row-span-2 overflow-hidden rounded-lg relative">
					<img class="object-cover w-full h-full" src="img/profile.png" alt="Profile" />
					<div class="absolute bottom-0 right-8 text-base text-[#e2e2e2]">
						<code>{commitHash}</code><Icon name={"mdi:source-branch"} />
					</div>
				</div>
				<!-- Info -->
				<div class="flex flex-col justify-center">
					<h1 class="text-xl">Sergi Florensa Rojo</h1>
					<div
						class="flex justify-between font-thin text-base py-xxs"
					>
						<h2>Programador Junior</h2>
						<Copytxt
							textcopyed="https://waximusglub.github.io/portfolio_SF/"
							client:load
							stylesbtn="text-base"
						>
							<Icon name={"mdi:link"} />
						</Copytxt>
					</div>
				</div>

				<div class="grid grid-cols-4">
					<div class="text-[#D14836]">
						<Copytxt
							textcopyed="sflorensadev@gmail.com"
							client:load
						>
							<Icon name="mdi:gmail" class="w-8 h-8" />
						</Copytxt>
					</div>
					<div class="text-black">
						<a href="https://github.com/Waximusglub" target="_blank"
							><Icon name="mdi:github" class="w-8 h-8" /></a
						>
					</div>
					<div class="text-[#0A66C2]">
						<a
							href="https://www.linkedin.com/in/sergi-florensadev/"
							target="_blank"
							><Icon name="mdi:linkedin" class="w-8 h-8" /></a
						>
					</div>

					<div class="text-[#f03838]">
						<a
							href="doc/CV_Sergi-Florensa.pdf"
							class="text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg text-sm px-1.5 py-1"
